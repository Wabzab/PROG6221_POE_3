<Page x:Class="PROG6221_POE_3.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG6221_POE_3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel x:Name="stckPnl" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
            <TextBlock x:Name="txtP1" Text="Income Details" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
            
            <Label Content="Enter monthly income before tax:" FontSize="16" Margin="0,15,0,0"/>
            <local:NumberTextBox x:Name="Income" MinHeight="25" FontSize="16" LostFocus="SaveContent"/>

            <Label Content="Enter monthly tax on income:" FontSize="16" Margin="0,15,0,0"/>
            <local:NumberTextBox x:Name="Tax" MinHeight="25" FontSize="16" LostFocus="SaveContent"/>
        </StackPanel>
        
    </Grid>
</Page>
